paths:
  /candidates/{candidateId}:
    get:
      tags:
        - candidates
      summary: retrieves information on an individual candidate.
      operationId: searchCandidate
      description:
        By passing in a candidateId, you can retrieve biographical information on a specific candidate currently running for office at the state or federal level, and a politician currently holding state of federal office.
      parameters:
        - in: path
          name: candidateId
          description: unique identifer for the candidate.
          required: true
          schema:
            type: string
      responses:
        '200':
          description: search results matching criteria
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/CandidateItem'
        '400':
          description: bad input parameter
